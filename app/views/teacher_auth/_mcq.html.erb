<%= simple_form_for :new_mcq, { url: create_mcq_path } do |f| %>
  <div class="row">
    <div class="col-md-5"><%= f.input :question %></div>
  </div>

  <div class="row">
    <div class="col-md-2"><%= f.input :option1 %></div>
    <div class="col-md-2"><%= f.input :option2 %></div>
    <div class="col-md-2"><%= f.input :option3 %></div>
    <div class="col-md-2"> <%= f.input :option4 %></div>
    <div class="col-md-2"> <%= f.input :option5 %></div>
    <div class="col-md-2"> <%= f.input :option6 %></div>

  </div>




  <%= f.button :submit, "create MCQ" %>
<% end %>