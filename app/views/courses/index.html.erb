<h1>Courses</h1>

<table id="courses" class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Board Name</th>
      <th>Group Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.boardgroup.board.name %></td>
        <td><%= course.boardgroup.group.name %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm_swal: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

