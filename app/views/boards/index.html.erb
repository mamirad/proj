<h1>Boards</h1>

<table class="datatable" >
  <thead>
    <tr>
      <th>Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
       
        <td><%= link_to 'Show', board ,class: 'btn btn-default btn btn-s '%></td>
        <td><%= link_to 'Edit', edit_board_path(board) ,class: 'btn btn-default btn btn-s '%></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm_swal: 'Are you sure?' },class: 'btn btn-default btn btn-s ' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

