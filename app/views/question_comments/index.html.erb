<h1>Question Comments</h1>

<table class="responsive nowrap table table-hover" id="dttb-question_comments" data-sort="true" data-source="<%= url_for(format: :json)%>">
  <thead>
    <tr>
      <th data-data="comment">Comment</th>
      <th data-data="status">Status</th>

   </tr>
  </thead>
  <%@question_comments.each do |cmt| %>

<tr>
  <td><%=cmt.comment%></td>
  <td><%=cmt.status%></td>
 <td><%= link_to 'Show', question_comment_path(cmt)%> </td>
  <td><%=link_to 'Edit', edit_question_comment_path(cmt)%> </td>
  <td><%= link_to 'Destroy', question_comment_path(cmt), method: :delete, data: { confirm: 'Are you sure?' }%> </td>




</tr>
  <% end %>

</table>

<br>
<%= link_to 'Back', 'javascript:history.go(-1);' %>

